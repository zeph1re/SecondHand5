<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ei" />

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/product_image">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penawaran Produk"
                android:textSize="11sp"
                android:fontFamily="@font/poppins"/>


            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raiden Shogun"
                android:textSize="15sp"
                android:textColor="@color/blue_300"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 250.000"
                android:textSize="13sp"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:id="@+id/product_offered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ditawar Rp 200.000"
                android:textSize="15sp"
                android:textColor="@color/blue_300"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/offered_date"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 Apr, 14:04"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"/>

            <ImageView
                android:id="@+id/offered_status"
                android:layout_gravity="center"
                android:src="@drawable/ic_circle"
                app:tint="@android:color/holo_red_dark"
                android:layout_width="12dp"
                android:layout_height="12dp"/>

        </LinearLayout>


    </RelativeLayout>
    

</androidx.cardview.widget.CardView>