<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@android:color/transparent"
    android:layout_margin="10dp"
    app:strokeColor="@color/blue_100"
    app:strokeWidth="2dp"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/notification_image"
            android:src="@drawable/account_image"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/notification_image">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notification_info"
                android:text="Penawaran Produk"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notification_product_name"
                android:text="Jam Tangan Casio"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notifiation_product_price"
                android:text="harga produk"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notification_product_offer"
                android:text="penawaran harga"
                android:textSize="17sp"/>

        </LinearLayout>

        <TextView
            android:layout_marginRight="10dp"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_created_at"
            android:text="tanggal"
            android:layout_toStartOf="@id/read_or_not"/>

        <ImageView
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/read_or_not"
            android:src="@drawable/ic_read"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:visibility="visible"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>