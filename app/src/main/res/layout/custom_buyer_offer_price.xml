<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeWidth="2dp"
    app:strokeColor="@color/blue_100"
    app:cardCornerRadius="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Masukkan Harga Tawarmu"
            android:layout_marginVertical="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Harga tawaranmu akan diketahui penual, jika penjual cocok kamu akan segera dihubungi penjual."
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginVertical="15dp"
            app:cardCornerRadius="10dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/blue_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ei" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Barang"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga Barang"
                        android:textSize="16sp" />


                </LinearLayout>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_offer_price"
                android:hint="Harga Tawar"
                android:layout_marginVertical="10dp"
                android:background="@drawable/custom_edittext"
                android:drawableStart="@drawable/ic_rupiah"
                android:drawableTint="@color/cardview_dark_background"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit_offer_price"
            android:layout_margin="15dp"
            android:layout_alignParentBottom="true"
            android:text="Kirim"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_button"
            android:textColor="@color/blue_100"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>