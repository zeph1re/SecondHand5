<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_login"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/btn_back_login"
            android:src="@drawable/ic_back"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/p"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"
            android:text="Login"
            android:textStyle="bold"
            android:textSize="35sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="70dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/field_login_email"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_gravity="center_horizontal"
            app:helperTextTextColor="@color/red"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:hint="Email"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/loginemail"
                android:background="@drawable/rectangleedittext"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            </EditText>

        </com.google.android.material.textfield.TextInputLayout>




        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginBottom="20dp"
            android:id="@+id/field_login_password"
            app:helperTextTextColor="@color/red"
            android:layout_gravity="center_horizontal"
            app:passwordToggleEnabled="true"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:hint="Password"
                android:layout_marginTop="10dp"

                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/loginpassword"
                android:inputType="textPassword"
                app:passwordToggleEnabled="true"
                android:background="@drawable/rectangleedittext"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:id="@+id/btnlogin"
            android:text="Login"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue_300"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.AppCompatButton>

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/daftar"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:text="Dont have an account?"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView

                android:layout_toRightOf="@id/daftar"
                android:layout_marginLeft="5dp"
                android:id="@+id/daftar2"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:text="Register here"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>


        </RelativeLayout>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:visibility="gone"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B2000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:gravity="center_horizontal">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/loading_progress"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Wait.."
                android:background="#00000000"
                android:textSize="20sp"
                android:textColor="@color/purple_200">

            </TextView>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/skip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>

    </RelativeLayout>


</RelativeLayout>