<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.user.Register">

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_back"
            android:src="@drawable/ic_back"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_marginVertical="30dp"
            android:layout_below="@id/btn_back"
            android:text="Daftar"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:hint="Nama Lengkap"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableStart="@drawable/ic_person"
                    android:drawableTint="@color/cardview_dark_background"
                    android:drawablePadding="10dp"
                    android:paddingStart="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_gravity="center_horizontal"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:hint="Email (Ex: johndee@gmail.com)"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableStart="@drawable/ic_email"
                    android:drawableTint="@color/cardview_dark_background"
                    android:drawablePadding="10dp"
                    android:paddingStart="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_gravity="center_horizontal"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:passwordToggleEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:hint="Buat Password"
                    app:passwordToggleEnabled="true"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableStart="@drawable/ic_keypassword"
                    android:drawableTint="@color/cardview_dark_background"
                    android:drawablePadding="10dp"
                    android:paddingStart="10dp"
                    android:inputType="textPassword|textNoSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:text="Daftar"
                android:textAllCaps="false"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_button"
                android:backgroundTint="#3A5BA0"
                android:textColor="#DBDFFD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_margin="25dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Sudah Punya akun?"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="10dp"
            android:text="Masuk di sini"
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>