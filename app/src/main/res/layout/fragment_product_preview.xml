<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/preview_image"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:layout_marginTop="-20dp"
                    android:src="@drawable/jam">
                </ImageView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="-80dp"
                    android:layout_marginRight="60dp"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="15dp"
                    card_view:cardElevation="30dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/preview_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Nama"
                            android:textSize="20sp">
                        </TextView>

                        <TextView
                            android:id="@+id/preview_product_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Kategori"
                            android:textSize="16sp">
                        </TextView>

                        <TextView
                            android:id="@+id/preview_product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Harga"
                            android:textSize="20sp">

                        </TextView>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="60dp"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="15dp"
                    card_view:cardElevation="30dp">

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:id="@+id/preview_seller_image"
                            android:layout_width="60dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ei">

                        </ImageView>

                        <TextView
                            android:id="@+id/preview_seller_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="17dp"
                            android:layout_toRightOf="@+id/preview_seller_image"
                            android:text="Nama Penjual"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/preview_seller_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/preview_seller_name"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/preview_seller_image"
                            android:text="Kota"
                            android:textSize="18sp">

                        </TextView>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="60dp"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="15dp"
                    card_view:cardElevation="30dp">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Description"
                            android:textSize="20sp">

                        </TextView>

                        <TextView
                            android:id="@+id/preview_product_description"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:text="\n\n\n\n\n\n\n\n\n\n\n\n\n\n\na"
                            android:textSize="18sp">

                        </TextView>
                    </LinearLayout>
                    </ScrollView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"

        android:layout_marginBottom="20dp"
        android:id="@+id/btn_post_preview"
        android:text="Post"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue_300"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.appcompat.widget.AppCompatButton>

    <RelativeLayout
        android:id="@+id/postPreview_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:visibility="gone">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B2000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/loading_progress" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Please Wait.."
            android:textColor="@color/purple_200"
            android:textSize="20sp">

        </TextView>

    </LinearLayout>
    </RelativeLayout>
</FrameLayout>


